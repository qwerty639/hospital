<Page x:Class="HOSPITAL.Views.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HOSPITAL.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">

    <Grid>
        <StackPanel Orientation="Vertical"
                    VerticalAlignment="Center">
            <Button x:Name="btnAddPacient"
                    Content="Добавить пациента"
                    Width="250"
                    Height="40"
                    FontSize="15"
                    Margin="0 0 0 15"
                    Click="btnAddPacient_Click"/>
            <Button x:Name="btnAddDoctor"
                    Content="Добавить врача"
                    Width="250"
                    Height="40"
                    FontSize="15"
                    Click="btnAddDoctor_Click"/>
            <Button x:Name="btnTherapy"
                    Content="Лечение"
                    Width="250"
                    Height="40"
                    FontSize ="15"
                    Margin="0 15 0 0" Click="btnTherapy_Click"/>
        </StackPanel>
    </Grid>
</Page>
